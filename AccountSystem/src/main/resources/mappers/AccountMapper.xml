<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cooba.TradeSimulator.Mapper.AccountMapper">
    <resultMap id="AccountResultMap" type="com.cooba.TradeSimulator.Object.Account">
        <id property="id" column="id"/>
        <result property="uuid" column="uuid"/>
        <result property="name" column="name"/>
        <result property="password" column="password"/>
        <result property="createdTime" column="created_time"/>
        <result property="updatedTime" column="updated_time"/>
    </resultMap>

    <select id="selectAccountById" resultMap="AccountResultMap">
        SELECT * FROM account WHERE id = #{id}
    </select>

    <select id="selectAccount" resultMap="AccountResultMap">
        SELECT * FROM account
        <where>
            <if test="id !=null ">
                id = #{id}
            </if>
            <if test="uuid != null">
                AND uuid = #{uuid}
            </if>
            <if test="name != null">
                AND name = #{name}
            </if>
        </where>
    </select>

    <insert id="insertAccount" >
        INSERT INTO account ( uuid, name, password, created_time, updated_time)
        VALUES
        <foreach collection="list" item="item" separator=",">
            ( #{item.uuid}, #{item.name}, #{item.password}, NOW(), NOW())
        </foreach>
    </insert>

    <update id="updateAccount" >
        UPDATE account
        <set>
            <if test="name!= null">
                name = #{name},
            </if>
            <if test="password!= null">
                password = #{password},
            </if>
            updatedTime = NOW()
        </set>
        <where>
            <if test="id !=null ">
                id = #{id}
            </if>
            <if test="name != null">
                AND name = #{name}
            </if>
        </where>
    </update>

    <delete id="deleteAccount" >
        DELETE FROM account
        <where>
            <if test="id !=null ">
                id = #{id}
            </if>
            <if test="name != null">
                AND name = #{name}
            </if>
        </where>
    </delete>
</mapper>